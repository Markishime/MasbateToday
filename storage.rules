rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Images folder - anyone can read, only admins can write
    match /images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
        request.auth.token.admin == true;
    }

    // Videos folder - anyone can read, only admins can write
    match /videos/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
        request.auth.token.admin == true;
    }
  }
}

